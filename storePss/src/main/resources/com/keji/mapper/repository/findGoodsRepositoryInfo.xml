<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.keji.mapper.repository.GoodsRepositoryInfoMapper">
    <resultMap id="goodsRepositoryInfo" type="GoodRepositoryInfo">
        <result property="number" column="iniStoNum"/>

        <!--仓库-->
        <association property="repository" javaType="repository">
            <id property="id" column="rId"/>
            <result property="name" column="rName"/>
        </association>

        <!--商品-->
        <association property="good" javaType="good">
            <id property="id" column="gID"/>
            <result property="className" column="gClassName"/>
            <result property="size" column="gSize"/>
            <result property="type" column="gType"/>
            <result property="name" column="gName"/>
            <result property="cost" column="gCost"/>
        </association>
        <!--供应商-->
        <association property="tProvider" javaType="tProvider">
            <id property="id" column="pId"/>
            <result property="name" column="pName"/>
        </association>
    </resultMap>

    <select id="findGoodsRepositoryInfo" resultMap="goodsRepositoryInfo">
        SELECT tp.iniStoNum,tr.rId,tr.rName,tg.gID,tg.gClassName,tg.gSize,tg.gType,tg.gName,tg.gCost,tp.pId,tp.pName
        FROM t_goods_repsoritory tgr
        JOIN t_repository tr on tgr.rId = tr.rId AND tr.state = 1
        JOIN t_goods tg on tgr.gID = tg.gID AND tg.state = 1
        JOIN t_provider tp on tgr.posId = tp.pId AND tp.state = 1
        <where>
            <if test="rId != null  and rId != '' ">
                AND tr.rId = #{rId}
            </if>
            <if test="posId != null  and posId != '' ">
                AND tp.posId = #{posId}
            </if>
            <if test="gName != null  and gName != '' ">
                AND tg.gName = #{gName}
            </if>
            <if test="gHelpName != null  and gHelpName != '' ">
                AND tg.gHelpName = #{gHelpName}
            </if>
        </where>
    </select>
    
</mapper>